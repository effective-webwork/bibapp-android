<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    tools:context=".ui.info.InfoFragment">

    <Button
        android:id="@+id/info_button_contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="1dp"
        android:text="@string/info_button_contact"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/info_button_impressum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/info_button_impressum"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/info_button_contact"
        app:layout_constraintBottom_toTopOf="@id/info_eol"/>

    <TextView
        android:id="@+id/info_eol"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/info_eol"
        android:linksClickable="true"
        android:autoLink="web"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/info_button_impressum" />

</androidx.constraintlayout.widget.ConstraintLayout>