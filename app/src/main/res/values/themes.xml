    <!-- Application theme, according to API level -->
    <style name="Theme.BibApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Here we setting appcompatâ€™s actionBarStyle -->
        <!--<item name="actionBarStyle">@style/BibAppActionBarStyle</item>-->

        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">@color/colorPrimary</item>

        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>

        <!-- colorAccent is used as the default value for colorControlActivated,
         which is used to tint widgets -->
        <item name="colorAccent">@color/colorAccent</item>

        <!-- You can also set colorControlNormal, colorControlActivated
         colorControlHighlight, and colorSwitchThumbNormal. -->

        <item name="actionModeBackground">@color/colorAccent</item>

<!--        <item name="searchViewStyle">@style/BibAppTheme.SearchView</item>-->

        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeStyle">@style/Widget.App.ActionMode</item>
        <item name="actionModeCloseDrawable">@drawable/ic_close_24dp</item>
        <item name="actionBarTheme">@style/ThemeOverlay.MaterialComponents.Dark.ActionBar</item>
    </style>

